<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="employee1" class="org.example.Employee">
        <!-- setter injection -->
        <property name="age" value="25" />
        <!-- reference injection -->
        <property name="computer" ref="desktop" />
    </bean>

    <!-- here we have removed the reference injection for computer interface instead we used autowire by name with the laptop object-->
    <bean id="employee2" class="org.example.Employee" autowire="byName">
        <!-- setter injection -->
        <property name="age" value="25" />
    </bean>

    <!-- here we have removed the reference injection for computer interface instead we used autowire by type with the laptop as desktop object-->
    <bean id="employee3" class="org.example.Employee" autowire="byType">
        <!-- setter injection -->
        <property name="age" value="25" />
    </bean>

    <bean id="prototypeEmployee" class="org.example.PrototypeEmployee" scope="prototype">
    </bean>

    <!-- used lazy-init as true because this needs to be load only when we want this :) -->
    <bean id="computer" class="org.example.Laptop" scope="singleton" lazy-init="true">
        <constructor-arg index="0" value="Lenovo ThinkPad P14S"/>
        <constructor-arg index="1" value="16"/>
    </bean>

    <bean id="laptop" class="org.example.Laptop" scope="singleton">
        <constructor-arg index="0" value="Lenovo ThinkPad P14S"/>
        <constructor-arg index="1" value="16"/>
    </bean>

    <bean id="desktop" class="org.example.Desktop" scope="singleton" primary="true">
        <constructor-arg index="0" value="LG Curve Monitor"/>
        <constructor-arg index="1" value="32"/>
    </bean>
</beans>